{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@Config/*": ["src/config/*"],
      "@Components/*": ["src/components/*"],
      "@Controllers/*": ["src/controllers/*"],
      "@Middleware/*": ["src/middleware/*"],
      "@Models/*": ["src/models/*"],
      "@Routes/*": ["src/routes/*"],
      "@Utils/*": ["src/utils/*"]
    },
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
